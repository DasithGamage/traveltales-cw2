<%- include('layout') %>

<div class="form-container" style="text-align: center;">
  <h2>Oops! Something went wrong</h2>
  
  <!-- Error message display with styling -->
  <div style="margin: 30px 0; padding: 20px; background-color: #fff5f0; border-radius: 5px; border: 1px solid #ffeaa7;">
    <p style="font-size: 1.1em; color: #d63031; margin: 0;">
      <%= message %>
    </p>
  </div>
  
  <!-- Return button - either to specified URL or home page -->
  <% if (returnUrl) { %>
    <a href="<%= returnUrl %>" class="btn btn-primary">Go Back</a>
  <% } else { %>
    <a href="/" class="btn btn-primary">Go to Home</a>
  <% } %>
</div>

</div>